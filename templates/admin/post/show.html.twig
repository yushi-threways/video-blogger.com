{% extends 'admin/base.html.twig' %}

{% block title %}投稿詳細 | Vlogger管理{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item active">投稿詳細</li>
{% endblock %}

{% block content %}
    <div class="sw-Admin_ContentHeader">
        <h1>投稿詳細</h1>
        <a href="{{ path('admin_post_edit', {'id': post.id}) }}">edit</a>
    </div>
    {{ dump(next) }}


    <table class="table sw-Amin_IndexTable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>サムネイル</th>
                <td><img src="http://i.ytimg.com/vi/{{ post.video }}/default.jpg" alt="{{ post.title }}"></td>
            </tr>
            <tr>
                <th>タイトル</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>スラッグ</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>概要</th>
                <td>{{ post.summary }}</td>
            </tr>
            <tr>
                <th>内容</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>公開日</th>
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>次の投稿</th>
                <td>

                    {% if post.next %}
                        <a href="{{ path('admin_post_show', {'id': post.next.id}) }}">{{ post.next.title }}</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>前の投稿</th>
                <td>
                    {% if post.previous %}
                        <a href="{{ path('admin_post_show', {'id': post.previous.id}) }}">{{ post.previous.title }}</a>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_post_index') }}">back to list</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}
