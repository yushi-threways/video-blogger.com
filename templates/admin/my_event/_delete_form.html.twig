<form method="post" action="{{ path('admin_my_event_delete', {'id': my_event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ my_event.id) }}">
    <button class="btn">Delete</button>
</form>
